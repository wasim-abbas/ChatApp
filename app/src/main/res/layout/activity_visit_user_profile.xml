<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16sdp"
    tools:context=".views.activities.VisitUserProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:id="@+id/imgCover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_pic">

            </ImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile_setting"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_76sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/tvUSerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgProfile_setting"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/user_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/llSocialMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvCardView"
        android:layout_marginTop="@dimen/_36sdp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/set_FaceBook"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginRight="@dimen/_32sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/fb">

        </ImageView>

        <ImageView
            android:id="@+id/set_Instragram"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_32sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/instagram">

        </ImageView>

        <ImageView
            android:id="@+id/set_webSite"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/website">

        </ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/btnSendMEssage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llSocialMedia"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/send_message"
        android:textAllCaps="false"
        android:textColor="@color/white">
    </Button>


</RelativeLayout>