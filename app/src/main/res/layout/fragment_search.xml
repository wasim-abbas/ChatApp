<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.mainFragments.SearchFragment">

    <EditText
        android:id="@+id/edSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:hint="search user here"> </EditText>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVSearchedUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="R.layout.user_search_item_layout"
        android:layout_below="@id/edSearch"
        android:layout_marginHorizontal="@dimen/_4sdp"
        >

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>